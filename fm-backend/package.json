{
  "scripts": {
    "start": "npx cross-env NODE_OPTIONS=--max-old-space-size=4096 tsc && node dist/index.js",
    "dev": "yarn prestart && nodemon --config nodemon.json",
    "prestart": "rimraf ./dist && copy-files-from-to"
  },
  "copyFiles": [
    {
      "from": [
        "./**",
        "!./**/dist",
        "!./**/tsconfig.json",
        "!./**/public",
        "!./**/*.{js,ts}",
        "!./**/node_modules"
      ],
      "to": "dist"
    }
  ],
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-jwt": "^8.4.1",
    "handlebars": "^4.7.8",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "rimraf": "^6.0.1",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "copy-files-from-to": "^3.11.0",
    "nodemon": "^3.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
